{
    "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "useLiteralKeys": "off"
            },
            "a11y": {
                "useKeyWithClickEvents": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            }
        }
    }
}